generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Definim primul nostru model: Anuntul
model Ad {
  id        String   @id @default(uuid())
  title     String
  price     String
  location  String
  url       String   @unique
  phone     String?  // Numarul de telefon este optional initial
  createdAt DateTime @default(now())
  status    String   @default("NEW") // ex: NEW, CONTACTED, RESPONDED
}